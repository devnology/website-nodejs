!!!
doctype 5
html(lang="nl")
    head
        title= title
        link(rel='stylesheet', href='/lib/bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet', href='/lib/bootstrap/css/bootstrap-responsive.min.css')
        link(rel='stylesheet', href='/stylesheets/custom.css')
        
        script(type='text/javascript', src='//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js')

        script(type='text/javascript', src='/js/lib/bootstrap/js/bootstrap-modal.js')
        script(type='text/javascript', src='/js/index.js');

        body
        div.container
            div.content
                div.page-header
                    h1 Main Page 
                        small Welcome to #{title}
                div.row-fluid
                    div.span9
                        div.hero-unit
                            h2 Create a new event

                            form(action='/events/add', method='post')
                                label title
                                    input(type='text', name='event[title]')
                                label description
                                    input(type='textarea', name='event[description]')
                div.footer 
                    p &copy; nodeblox 2011
